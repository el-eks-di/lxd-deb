diff --git a/lxd/daemon.go b/lxd/daemon.go
index 23a8fd8f..f98ee76a 100644
--- a/lxd/daemon.go
+++ b/lxd/daemon.go
@@ -508,7 +508,7 @@ func (d *Daemon) init() error {
 		logger.Infof(" - unprivileged file capabilities: no")
 	}
 
-	if util.LoadModule("shiftfs") == nil {
+	if os.Getenv("LXD_SHIFTFS") != "false" && util.LoadModule("shiftfs") == nil {
 		d.os.Shiftfs = true
 		logger.Infof(" - shiftfs support: yes")
 	} else {
